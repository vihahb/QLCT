<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/colorPrimary" android:state_checked="true" android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <item android:drawable="@color/white" android:state_checked="true">
        <shape>
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/colorPrimary" />
            <corners android:topLeftRadius="6dp" android:topRightRadius="0dp" android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" />
        </shape>
    </item>
</selector>