<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_icon_tk"
        android:src="@mipmap/ic_t04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/type_tk"
        android:textColor="@color/colorPrimary"
        android:text="@string/des_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_alignBottom="@+id/img_icon_tk"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp" />

    <TextView
        android:textSize="15sp"
        android:textColor="@color/rectage_btn"
        android:id="@+id/name_tk"
        android:text="@string/name_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/type_tk"
        android:layout_alignBottom="@+id/type_tk"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/acc_id"
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name_tk"
        android:layout_toEndOf="@+id/img_icon_tk" />
</RelativeLayout>