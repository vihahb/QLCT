<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tab3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <Spinner
            android:gravity="left"
            android:id="@+id/spinner_group1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/type_transaction"
            android:textColorHint="@color/colorAccent"
            />
            <!--app:met_floatingLabel="highlight" />-->
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:id="@+id/ln_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:id="@+id/lnGroup"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="95dp">

        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_weight="1"-->
            <!--android:id="@+id/input_layout_group"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="left">-->

            <!---->
        <!--</android.support.design.widget.TextInputLayout>-->
        <EditText
            android:layout_weight="1"
            android:id="@+id/input_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/group"
            android:inputType="text"
            android:gravity="left" />

        <Spinner
            android:id="@+id/spinner_transaction_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/group"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent" />



        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_gravity="bottom"
            android:background="@null"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_add_circle_outline_black_24dp"/>
    </LinearLayout>

</LinearLayout>
